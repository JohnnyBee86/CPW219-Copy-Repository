@model IEnumerable<ThreeDPrinters>

@{
    ViewData["Title"] = "Printer List";
}

<h1>PrinterList</h1>

<table class="table">
    <tbody>
        <div class="row align-items-center">
            @foreach (var item in Model) {
                <div class="col-auto">
                    <div class="card" style="width: 18rem;">
                        <img src="@Html.DisplayFor(modelItem => item.PrinterImage)" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <h7 class="card-title">@Html.DisplayFor(modelItem => item.SKU)</h7>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.BuildVolume)</p>
                            <a href="#" class="btn btn-primary">@Html.DisplayFor(modelItem => item.Price)</a>
                        </div>
                    </div>
                </div>
		    }
		</div>
    </tbody>
</table>
